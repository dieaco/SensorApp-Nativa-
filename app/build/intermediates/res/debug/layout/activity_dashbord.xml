<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#5a87bf"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:choiceMode="singleChoice" >

        <TableRow
            android:id="@+id/menuOpcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#333"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="7dp"
                android:text="@string/perfil" />

        </TableRow>

        <TableRow
            android:id="@+id/menuOpcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#333"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="7dp"
                android:text="@string/historial" />

        </TableRow>

        <TableRow
            android:id="@+id/menuOpcion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#333"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="7dp"
                android:text="@string/nuevos" />

        </TableRow>

        <TableRow
            android:id="@+id/menuOpcion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#333"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exit_to_app_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="7dp"
                android:text="@string/cerrarSesion" />

        </TableRow>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
